{
    "name" : "eTUSD BigBlueButton Screenshare Extension",
    "author": "BigBlueButton",
    "version" : "0.0.7",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Chrome Extension granting WebRTC screen capturing capabilities to BigBlueButton meetings.",
    "homepage_url": "https://bbbwcs.etusd.org/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true
    },
    "externally_connectable": {
       "matches": [
           "*://*.bbbwcs.etusd.org/*"
         ]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}

